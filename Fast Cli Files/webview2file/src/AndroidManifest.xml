<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.bosonshiggs.webview2file">

  <application>
    <!-- Componentes do aplicativo -->
  </application>

  <!-- Permissões necessárias -->
  <!-- Permissão para acessar a Internet -->
  <uses-permission android:name="android.permission.INTERNET" />

  <!-- Permissão para gravar arquivos no armazenamento interno/externo -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <!-- Permissão para ler arquivos do armazenamento -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

  <!-- Adicionar permissões para gerenciamento de arquivos em dispositivos Android mais recentes -->
  <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
                   android:maxSdkVersion="30" />
</manifest>

